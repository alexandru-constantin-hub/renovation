
@{
    ViewData["Title"] = "Index";
}


<h1 class="mb-4">Connexion</h1>




<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div class="form-group mb-2">
                <label for="emailUser" class="control-label mb-2">Email</label>
                <input type="email" name="email" id="emailUser" class="form-control"  />
            </div>
            <div class="form-group mb-2">
                <label for="passwordUser" class="control-label mb-2">Le mot de passe</label>
                <input type="password" name="password" id="passwordUser" class="form-control" />
            </div>
            <div class="form-group mt-4">
                <button class="btn btn-primary">Login</button>
            </div>    
        </form>
    </div>
</div>
<div class="row mt-2">
    <div class="col-md-4">
        @if (TempData["messageError"] != null)
        {
            <p class="text text-danger">@TempData["messageError"]</p>
        }
       
    </div>
</div>



