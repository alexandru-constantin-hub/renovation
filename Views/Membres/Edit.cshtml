@model RenovationFinale.Models.Membre

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Membre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdUtilisateur" />
            <div class="form-group mb-2">
                <label asp-for="Nom" class="control-label mb-2"></label>
                <input asp-for="Nom" class="form-control mb-2" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Prenom" class="control-label mb-2"></label>
                <input asp-for="Prenom" class="form-control mb-2" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Adresse" class="control-label mb-2"></label>
                <input asp-for="Adresse" class="form-control mb-2" />
                <span asp-validation-for="Adresse" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Telephone" class="control-label mb-2"></label>
                <input type="number" asp-for="Telephone"  class="form-control mb-2" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 mb-4">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="InformationMembre" asp-controller="EspaceMembres">Vos informations</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
