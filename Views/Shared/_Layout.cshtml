@using Microsoft.AspNetCore.Http
@using System.Web;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor context

@{
    ViewData["Title"] = "Renovation";

    var cookieLogedIn = context.HttpContext.Request.Cookies["logedIn"];

    var cookieRole = context.HttpContext.Request.Cookies["role"];

    var cookieName = context.HttpContext.Request.Cookies["name"];
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RenovationFinale</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RenovationFinale.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">RenovationFinale</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    
                    <ul class="navbar-nav flex-grow-1 d-flex justify-content-end mt-3">
                        @if (@cookieLogedIn != "true")
                        {
                            <li class="nav-item">
                                <div class="dropdown">
                                    <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        S'inscrire
                                    </button>
                                    <ul class="dropdown-menu" aria-label ledby="dropdownMenuButton1">
                                        <li><a class="dropdown-item" asp-controller="Utilisateurs" asp-action="CreateMember">S'inscrire en tant que Membre</a></li>
                                        <li><a class="dropdown-item" asp-controller="Utilisateurs" asp-action="CreateFurniseur">S'inscrire en tant que Furniseur</a></li>
                                    </ul>
                                </div>
                            </li>
                        }
                         
                        
                        @if (@cookieLogedIn == "true")
                        {
                            <li class="nav-item me-2">
                                    <p class="mt-2">Bonjour, @cookieName</p>
                            </li>

                            if (@cookieRole == "Administrateur")
                            {
                                
                                <li class="nav-item mb-3 me-2">
                                    <a class="nav-link btn btn-link" asp-controller="Administrateurs" asp-action="Index">Vos informations</a>
                                </li>
                                
                            }
                            
                            

                            if (@cookieRole == "Membre")
                            {
                                <li class="nav-item mb-3">
                                    <a class="nav-link btn btn-link" asp-controller="Membres" asp-action="Index">Vos informations</a>
                                </li>

                            }


                            if (@cookieRole == "Furniseur")
                            {
                                <li class="nav-item mb-3">
                                    <a class="nav-link btn btn-link" asp-controller="Furniseurs" asp-action="Index">Vos informations</a>
                                </li>

                            }

                            <li class="nav-item mb-3">
                                <a class="nav-link btn btn-link" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item mb-3">
                                <a class="nav-link btn btn-link" href="/login">Login</a>
                            </li>
                        }
                        
                        
                       
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <div class="w-100 d-flex flex-row justify-content-around navbar navbar-light mb-4 pb-4">
                @if (@cookieRole == "Administrateur")
                {
                    <div class="nav-item"><a asp-controller="Furniseurs" asp-action="Index">Apercu</a></div>
                    <div class="nav-item"><a asp-controller="Furniseurs" asp-action="Index">Utilisateurs</a></div>
                    <div class="nav-item"><a asp-controller="Furniseurs" asp-action="Index">Announces</a></div>
                    <div class="nav-item"><a asp-controller="Furniseurs" asp-action="Index">Type de piece</a></div>
                    <div class="nav-item"><a asp-controller="Furniseurs" asp-action="Index">Type de renovation</a></div>
                }
                @if (@cookieRole == "Membre")
                {
                    <div class="nav-item"><a asp-controller="Furniseurs" asp-action="Index">Apercu</a></div>
                    <div class="nav-item"><a asp-controller="Furniseurs" asp-action="Index">Mes annonces</a></div>
                    <div class="nav-item"><a asp-controller="Furniseurs" asp-action="Index">Des offres</a></div>
                    <div class="nav-item"><a asp-controller="Furniseurs" asp-action="Index">Entreprises</a></div>
                }
                @if (@cookieRole == "Furniseur")
                {
                    <div class="nav-item"><a asp-controller="Furniseurs" asp-action="Index">Apercu</a></div>
                    <div class="nav-item"><a asp-controller="Furniseurs" asp-action="Index">Rechercher une annonce</a></div>
                    <div class="nav-item"><a asp-controller="Furniseurs" asp-action="Index">Mes offres</a></div>
                }
               
                
            </div>
            
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
 
        <div class="container">
            &copy; 2022 - RenovationFinale - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
