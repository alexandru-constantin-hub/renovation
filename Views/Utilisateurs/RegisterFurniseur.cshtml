@model Renovation.Models.Utilisateur

@{
    ViewData["Title"] = "S'inscrire Furniseur";
}

<h1>S'inscrire en tant que Furniseure</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterFurniseur">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label mb-2">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group  mt-4">
                <label asp-for="MotDePasse" class="control-label mb-2">Mot de passe</label>
                <input asp-for="MotDePasse" class="form-control" type="password"/>
                <span asp-validation-for="MotDePasse" class="text-danger"></span>
            </div>
            @*<div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Etat" /> @Html.DisplayNameFor(model => model.Etat)
                </label>
            </div>*@
            @Html.Hidden("Role", "Furniseur")
            
               @* <input asp-for="Role" class="form-control"  type="hidden" value="Membre"/>*@
                
           
            @*<div class="form-group">
                <label asp-for="IdActivateur" class="control-label"></label>
                <input asp-for="IdActivateur" class="form-control" />
                <span asp-validation-for="IdActivateur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdDesactivateur" class="control-label"></label>
                <input asp-for="IdDesactivateur" class="form-control" />
                <span asp-validation-for="IdDesactivateur" class="text-danger"></span>
            </div>*@
            <div class="form-group  mt-4">
                <input type="submit" value="RegisterFurniseur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <p>Avez-vous déjà un compte?</p>
    <a href="/login" class="pt-4">Login</a>
</div>
@if (@ViewBag.Message != null)
{
    <div class="position-absolute top-0 end-0 @ViewBag.Message.CssClass">
        @ViewBag.Message.Text
    </div>

    
}




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




